# install.packages("hexSticker")
library(ggplot2)
library(hexSticker)
library(pdftools)
library(showtext)
## Loading Google fonts (http://www.google.com/fonts)
font_add_google("Arima Madurai")
## Automatically use showtext to render text for future devices
showtext_auto()
# img = "~/Dropbox/Rpkgs-dev/sticker/sclink-sub.png"
g = ggplot() +
  theme_void() +
  geom_text(aes(0,0,label=' ')) +
  xlab(NULL)
s = sticker(g, s_width=1.4, s_height=1.2,
            package="scINSIGHT", p_size=8.5, s_x=.8, s_y=.6,
            h_fill="#7BBFEA", h_color="#AECCF2",
            p_family = "Arima Madurai",
            filename="~/Dropbox/Rpkgs-dev/sticker/scINSIGHT.png")
plot(s)
